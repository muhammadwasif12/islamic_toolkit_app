<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp" >
 
    <!-- Header with App Name and Timer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Islamic Toolkit"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="start" />

            <!-- Timer moved here below app name -->
            <TextView
                android:id="@+id/current_time_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="14:49:43"
                android:textColor="#E8F5E8"
                android:textSize="14sp"
                android:gravity="start"
                android:layout_marginTop="2dp"
                android:fontFamily="monospace" />

        </LinearLayout>

        <!-- Refresh Button -->
        <ImageButton
            android:id="@+id/refresh_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/refresh_button_background"
            android:src="@drawable/ic_refresh"
            android:contentDescription="Refresh"
            android:padding="4dp"
            android:scaleType="fitCenter" />

    </LinearLayout>

    <!-- Combined Prayer Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/prayer_card_background"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Current Prayer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Prayer"
                android:textColor="#666666"
                android:textSize="11sp"
                android:gravity="center"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/current_prayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current: Dhuhr"
                android:textColor="#2E7D32"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="center" />

        </LinearLayout>

        <!-- Next Prayer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next Prayer"
                android:textColor="#666666"
                android:textSize="11sp"
                android:gravity="center"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/next_prayer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Asr"
                    android:textColor="#333333"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/next_prayer_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" in 02:15:30"
                    android:textColor="#FF5722"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginStart="4dp"
                    android:fontFamily="monospace" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Daily Dua Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="12dp"
        android:background="@drawable/dua_card_background"
        android:orientation="vertical"
        android:padding="16dp"
        android:minHeight="80dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="✨ Daily Dua ✨"
            android:textColor="#4CAF50"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/random_dua"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="بِسْمِ اللَّهِ الرَّحْمَنِ الرَّحِيمِ"
            android:textColor="#333333"
            android:textSize="13sp"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:maxLines="6"
            android:ellipsize="end" />

    </LinearLayout>

</LinearLayout>